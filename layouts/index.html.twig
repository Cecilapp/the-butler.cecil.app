<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {%~ include 'partials/metatags.html.twig' ~%}
    <style>
      {{- asset('/css/styles.css')|inline ~}}
    </style>
  </head>
  <body class="leading-normal tracking-normal text-gray-900">
    <div class="h-screen pb-14 bg-right bg-cover">
      {#- Nav ~#}
      <div class="w-full container mx-auto p-6">
        <div class="w-full flex items-center justify-between">
          <a class="flex items-center no-underline hover:no-underline font-serif font-bold text-2xl lg:text-4xl" href="{{ url() }}">
            {{ site.title }}
          </a>
          <div class="flex w-1/2 justify-end content-center">
          </div>
        </div>
      </div>
      {#- Main ~#}
      <div class="container pt-24 md:pt-48 px-6 mx-auto flex flex-wrap flex-col md:flex-row items-center">
        {#- Left Col ~#}
        <div class="flex flex-col w-full xl:w-2/5 justify-center lg:items-start overflow-y-hidden">
          <h1 class="my-4 text-3xl md:text-5xl font-bold leading-tight text-center md:text-left slide-in-bottom-h1">{{ site.baseline }}</h1>
          <p class="leading-normal text-base md:text-2xl mb-8 text-center md:text-left slide-in-bottom-subtitle">{{ site.description }}</p>
          <div class="flex w-full justify-center md:justify-start fade-in">
            {%- for button in site.buttons ~%}
            <a href="{{ button.url }}"><img src="{{ button.image }}" class="h-12 bounce-top-icons{% if not loop.last %} pr-4{% endif %}" alt="{{ button.name }} button"></a>
            {%- endfor ~%}
          </div>
          <p class=" text-center md:text-left fade-in">Source code on <a class="font-bold" href="{{ site.source }}">GitHub</a></p>
        </div>
        {#- Right Col ~#}
        <div class="w-full xl:w-3/5 py-6 overflow-y-hidden">
          <a href="{{ site.demo }}"><img src="{{ asset(site.screenshot) }}" width="{{ asset(site.screenshot).width }}" height="{{ asset(site.screenshot).height }}" alt="Screenshot" title="Go to the demo" class="w-5/6 mx-auto lg:mr-0 slide-in-bottom"></a>
        </div>
        {#- Footer ~#}
        <div class="w-full pt-16 pb-6 text-sm text-center md:text-left fade-in">
          <a class="text-gray-500 no-underline hover:no-underline" href="{{ cecil.url }}">Powered by Cecil</a>
        </div>
      </div>
    </div>
  </body>
</html>
